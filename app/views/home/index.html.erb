
  <div class="container text-center mt-5">
    <div class="row">
      <div class="col">
        <% if user_signed_in? %>
          <div class="mb-3">
            <p class="lead">Welcome <%= current_user.email %></p>
            <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
          </div>
        <% else %>
          <div class="mb-3">
            <%= button_to "Sign in", new_user_session_path,method: :get, class: "btn btn-primary" %>
          </div>
        <% end %>
        <h1 class="display-4">Welcome to LoyaltyProgram</h1>
      </div>
    </div>
  </div>
